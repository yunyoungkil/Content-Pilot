{
  "manifest_version": 3,
  "name": "Content Pilot",
  "version": "1.0.0",
  "description": "웹에서 아이디어 조각을 수집하고, AI를 활용해 콘텐츠를 기획하고 제작하는 클라우드 기반 워크스페이스입니다.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "alarms",
    "offscreen",
    "identity"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/bundle.js"],
      "css": ["css/style.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "oauth2": {
    "client_id": "670273757107-180d6ap7makb2ch4nttomglavsgmkmtq.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/analytics.readonly",
      "https://www.googleapis.com/auth/adsense.readonly"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        "lib/firebase-app-compat.js",
        "lib/firebase-database-compat.js",
        "offscreen.html",
        "css/style.css",
        "css/workspace.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}